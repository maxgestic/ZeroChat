<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZeroChat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent1_700</item>
        <item name="colorPrimaryVariant">@color/accent1_500</item>
        <item name="colorOnPrimary">@color/neutral1_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent2_700</item>
        <item name="colorSecondaryVariant">@color/accent2_500</item>
        <item name="colorOnSecondary">@color/neutral2_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/accent1_700</item>
    </style>
    <style name="ChatTopBar">
        <item name="android:background">@color/accent1_700</item>
    </style>
</resources>